<% content_for :page_title do %>
  <%= t('spree.editing_resource', resource: Spree::OptionValue.model_name.human) %> <span class="green">"<%= @option_value.name %>"</span>
<% end %>

<% content_for :page_actions do %>
  <%= button_to t('spree.back_to_resource_list', resource: Spree::OptionValue.model_name.human), spree.edit_admin_option_type_path(@option_value.option_type), class: 'btn-primary', icon: 'arrow-left' %>
<% end %>

<%= render 'settings' %>

<div class="row translations">
  <div class="col-4">
    <%= render 'fields' %>
  </div>
  <div class="col-8">
    <%= form_for [:admin, :option_type, @resource] do |f| %>
      <%= render 'form_fields', f: f %>
      <div class="form-actions" data-hook="buttons">
        <%= button t('spree.update'), 'update' %>
        <span class="or"><%= t('spree.or') %></span>
        <%= button_to t('spree.cancel'), spree.edit_admin_option_type_path(@option_value.option_type), icon: 'remove' %>
      </div>
    <% end %>
  </div>
</div>