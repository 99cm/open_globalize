<% content_for :page_title do %>
  <%= t('spree.editing_resource', resource: Spree::Taxon.model_name.human) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_to t('spree.back_to_resource_list', resource: Spree::Taxonomy.model_name.human), spree.admin_taxonomies_path, class: 'btn-primary', icon: 'arrow-left' %>
<% end %>

<%= render 'settings' %>

<div class="row translations">
  <div class="col-4">
    <%= render 'fields' %>
  </div>
  <div class="col-8">
    <%= form_for [:admin, @resource.taxonomy, @resource], url: spree.admin_taxonomy_taxon_path(@taxon.taxonomy, @taxon.id) do |f| %>
      <%= render 'form_fields', f: f %>
      <div class="form-actions" data-hook="buttons">
        <%= button t('spree.update'), 'update' %>
        <span class="or"><%= t('spree.or') %></span>
        <%= button_to t('spree.cancel'), spree.edit_admin_taxonomy_url(@taxon.taxonomy), icon: 'remove' %>
      </div>
    <% end %>
  </div>
</div>