<% content_for :page_title do %>
  <%= t('spree.editing_resource', resource: Spree::Store.model_name.human) %>
<% end %>

<%= render 'settings' %>

<div class="row translations">
  <div class="col-4">
    <%= render 'fields' %>
  </div>
  <div class="col-8">
    <%= form_for [:admin, @resource], url: spree.admin_general_settings_path do |f| %>
      <%= render 'form_fields', f: f %>
      <div class="form-actions" data-hook="buttons">
        <%= button t('spree.actions.update'), 'refresh', 'submit', {class: 'btn-success'} %>
        <span class="or"><%= t('spree.or') %></span>
        <%= button_to t('spree.actions.cancel'), spree.edit_admin_general_settings_path, icon: 'delete' %>
      </div>
    <% end %>
  </div>
</div>